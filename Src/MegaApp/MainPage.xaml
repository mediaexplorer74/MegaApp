<Page
    x:Class="MegaApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MegaApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    xmlns:data="using:MegaApp.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >


    <Grid  
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"    
    >
        <!-- Auto , 10 -->
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="160" />
        </Grid.RowDefinitions>
        

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SearchBox.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="300" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SearchBox.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>



        <!--Hamburger Menu Main Element begin -->
        <RelativePanel x:Name="RP1"
         Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                 
         >
            <Button Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE700;"
                    Width="45"
                    Height="45"
                    HorizontalAlignment="Center"
                    Click="HamburgerButton_Click"
                    />

            <TextBlock Name="TitleTextBlock" 
                       RelativePanel.RightOf="HamburgerButton"
                       FontWeight="Bold"
                       Margin="20,20,0,0" 
                       Width="240"
                       Foreground="Green" 
                       
                       />


            <ProgressRing Name="MyProgressRing"
                      Margin="150,0,0,0"
                      Width="50"
                      Height="50"
                      Foreground="Gray"
                      Grid.ColumnSpan="2"
                      Grid.RowSpan="3" 
                          
            />

            <TextBlock 
            Foreground="Yellow"
            HorizontalAlignment="Right" 
            Margin="50,0,0,0" 
            Text="Mega ProjectA Repo" 
            Width="120" 
            Height="20" 
            
             />



            <!-- TODO: TextChanged="MyAutoSuggestBox_TextChanged" -->
            <!--AutoSuggestBox Name="MyAutoSuggestBox"
                            QueryIcon="Find" 
                            PlaceholderText="Search" 
                            
                            RelativePanel.AlignRightWithPanel="True"
                            Width="200"
                            Margin="0,5,10,0" /-->
            <!-- Margin="40,5,60,0" -->
            <TextBox x:Name="SearchBox" 
                     TextChanged="SearchBox_TextChanged" 
                     PlaceholderText="Search" 
                     Grid.Row="0"
                     RelativePanel.AlignRightWithPanel="True" 
                     Width="200"
                     Height="20"
                     Margin="0,0,0,0"
                    
                     />

            <!--Button Content="Search" 
                    Width="60" 
                    Click="SearchButton_Click" 
                    Grid.Row="1" 
                    RelativePanel.AlignRightWithPanel="True" 
                    Height="35"
                    Margin="5,5,0,0"
                    /-->

        </RelativePanel>

        <!--Hamburger Menu Main Element end -->





        <!-- Hamberger Menu part: SplitView -->
