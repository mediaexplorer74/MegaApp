            </SplitView.Pane>


            <SplitView.Content>

                <!-- Tapped="MegaItem_Tapped" 
                Foreground="{ThemeResource AppBarForeground}"
                          Background="{ThemeResource AppBarBackgroundThemeBrush}"
                -->

                <GridView Name="MegaItemGrid"
                          ItemsSource="{x:Bind MegaItems}"
                          Margin="10,0,0,10"
