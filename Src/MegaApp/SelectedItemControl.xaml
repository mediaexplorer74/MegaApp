        <Grid Name="MainPanel" 
              Margin="2" 
              Height="140" 
              Width="120"
              Background="White"
                            
         >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

